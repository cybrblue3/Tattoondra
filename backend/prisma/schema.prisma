// ============================================
// MVP INVENTORY MODEL (Simple Tracking)
// ============================================

model Material {
  id              String   @id @default(cuid())
  name            String
  category        String?
  quantity        Int      // Current stock level (manually updated)
  unit            String   @default("unidad")
  restockThreshold Int     @default(25) // Alert when below this percentage
  costPerUnit     Decimal?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([quantity])
}

model BlockedDate {
  id              String   @id @default(cuid())
  date            DateTime
  reason          String?
  createdAt       DateTime @default(now())

  @@index([date])
}
